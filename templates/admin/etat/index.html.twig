{% block boutons %}
	<form action="{{ path("admin_etat") }}" method="post" class="float-right form-inline">
		<div class="form-group mx-sm-3 mb-2">
			<select name="annee" id="" class="form-control form-select">
				<option value="">Annee Academique</option>
				{% for annee in annees %}
					<option value="{{ annee.id }}" >{{ annee.nom }}</option>
				{% endfor %}
			</select>
		</div>
		{# <div class="col-md-2">
			<input type="submit" name="ok" class="btn btn-primary btn-sm float-right" value="Telecharger"/>
		</div> #}
