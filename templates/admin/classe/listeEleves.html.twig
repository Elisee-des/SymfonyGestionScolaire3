{% extends "base.admin.html.twig" %}

{% block title %}
	Liste des eleves de la classe de
	{{ classe.nom }}
	{# {{ annee.nom }} #}
{% endblock %}

{% block titre %}
	Liste des eleves de la classe de
	{{ classe.nom }}
{% endblock %}

{% block boutons %}
	<a href="" title="Cliquez pour telecharger un fichier excel des eleves et des parents" class="mr-2 btn btn-warning btn-outline-warning float-right">
		<i class="ti-import"></i>
	</a>
	<a href="" title="Cliquez pour telecharger un fichier excel des parents" class="mr-2 btn btn-inverse btn-outline-inverse float-right">
		<i class="ti-import"></i>
	</a>
	<a href="" title="Cliquez pour telecharger un fichier excel des eleves de cette classe" class="mr-2 btn btn-primary btn-outline-primary float-right">
		<i class="ti-import"></i>
	</a>
{% endblock %}

{% block body %}
	<div class="container">
		<div class="card">
			<div class="container">
				<div class="content"><br>
					<div class="card">
						<div class="panel-heading"><br>
							<form method="post" action="{{ path("admin_classe_liste_des_eleves", {id: classe.id}) }}">
								<div class="row">
									<div class="col-md-6">
										<h8>Telecharger la liste des eleves</h8>
									</div>
									<div class="col-md-4">
										<select name="file_type" class="form-control input-sm">
											<option value="Xlsx">Xlsx</option>
											<option value="Xls">Xls</option>
											{# <option value="Csv">Csv</option> #}
										</select>
									</div>
									<div class="col-md-2">
										<input type="submit" name="export" class="btn btn-primary btn-sm float-right" value="Telecharger"/>
									</div>
								</div>
							</form>
						</div><br>
					</div>
					<div class="card">
						<div class="panel-heading"><br>
							<form method="post" action="{{ path("admin_classe_liste_des_eleves", {id: classe.id}) }}">
								<div class="row">
									<div class="col-md-6">
										<h8>Telecharger la liste des parents d'eleve</h8>
									</div>
									<div class="col-md-4">
										<select name="file_type2" class="form-control input-sm">
											<option value="Xlsx">Xlsx</option>
											<option value="Xls">Xls</option>
											{# <option value="Csv">Csv</option> #}
										</select>
									</div>
									<div class="col-md-2">
										<input type="submit" name="export2" class="btn btn-primary btn-sm float-right" value="Telecharger"/>
									</div>
								</div>
							</form>
						</div><br>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="card">
		<div class="card-body">
			<div class="content">
				<table id="example" class="table table-striped nowrap" style="width:100%">
					<thead>
						<tr>
							<th>Nom</th>
							<th>Prenom</th>
							{# <th>Actions</th> #}
						</tr>
					</thead>
					<tbody>
						{% for eleve in eleves %}
							<tr>
								<td>{{eleve.nom}}</td>
								<td>{{eleve.prenom}}</td>
								{# <td>
																									<a href="{{ path("admin_classe_editer_classe_dans_liste", {"id": classe.id}) }}" title="Modifier les informations cette classe" class="btn btn-inverse btn-actions btn-outline-inverse">
																										<i class="ti-marker-alt"></i>
																									</a>
																									<a href="{{ path("admin_classe_liste_des_eleves", {"id": classe.id}) }}" title="Voir les eleves de cette classe" class="btn btn-primary btn-outline-primary">
																										<i class="ti-receipt"></i>
																									</a>
																								</td> #}
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
	<a href="{{ path("admin_classe_liste_des_classes", {id: classe.id}) }}" title="Cliquez pour revenir en arriere" class="mr-2 btn btn-inverse btn-outline-inverse float-left">
		Retour a la liste des classes
	</a>
	<br>
{% endblock %}
{% block javascripts %}{% endblock %}
