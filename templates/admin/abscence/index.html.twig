{% extends "base.admin.html.twig" %}

{% block title %}
	Gestion des abscences
{% endblock %}

{% block titre %}
	Gestion des abscences
{% endblock %}
{% block boutons %}
	<a href="{{ path("admin_abscence_creer") }}" title="Cliquez pour Ajouter un abscence a un eleve" class="btn btn-inverse btn-actions btn-outline-inverse float-right"><i class="ti-plus"></i></a>
{% endblock %}

{% block body %}
	<div class="card">
		<div class="card-body">
			<div class="content">
				<table id="example" class="table table-striped nowrap" style="width:100%">
					<thead>
						<tr>
							<th>Nom Prenom</th>
							<th>Abscence</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
						{% for abscence in abscences %}
							<tr>
								<td>{{abscence.eleve.nom}} {{abscence.eleve.prenom}}</td>
								<td>{{abscence.heurAbscence}}</td>
								<td>
									<a
										href="{{ path("admin_eleve_detail", {"id": abscence.eleve.id}) }}" title="Aller voir les details de cet eleve" class="btn btn-warning btn-outline-warning">
										<i class="ti-share"></i>
									</a>
									{# <a
										href="{{ path("admin_abscence_editer", {"id": abscence.id}) }}" title="Editer cette abcence" class="btn btn-inverse btn-actions btn-outline-inverse">
										<i class="ti-marker-alt"></i>
									</a>
									<a
										href="{{ path("admin_abscence_supprimer", {"id": abscence.id}) }}" title="Supprimer cette abcence" class="btn btn-danger btn-outline-danger"  onclick="return confirm('Etes vous sur de vouloir supprimer cet anneé ? les Trimesre de cet anneé seront supprimer avec cette action. Cette action est irreversible')">
										<i class="ti-trash"></i>
									</a> #}
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
{% endblock %}

{% block javascripts %}{% endblock %}
