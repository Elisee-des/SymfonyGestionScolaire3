{% extends "base.admin.html.twig" %}

{% block title %}
	Gestion des surveillants
{% endblock %}

{% block titre %}
	Gestion des surveillants
{% endblock %}
{% block boutons %}
	<a href="{{ path("admin_surveillant_creer") }}" title="Cliquez pour ajouter un surveillant" class="btn btn-inverse btn-outline-inverse btn-actions float-right">
		<i class="ti-plus"></i>
	</a>
{% endblock %}

{% block body %}
	<div class="container">
		<div class="content"><br>
			<div class="card">
				<div class="panel-heading"><br>
					<form method="post" action="{{ path("admin_surveillant_liste") }}">
						<div class="row">
							<div class="col-md-6">
								<h8>Telecharger la liste des surveillants</h8>
							</div>
							<div class="col-md-4">
								<select name="file_type" class="form-control input-sm">
									<option value="Xlsx">Xlsx</option>
									<option value="Xls">Xls</option>
									{# <option value="Csv">Csv</option> #}
								</select>
							</div>
							<div class="col-md-2">
								<input type="submit" name="export" class="btn btn-primary btn-sm float-right" value="Telecharger"/>
							</div>
						</div>
					</form>
				</div><br>
			</div>
		</div>
	</div>
	<div class="card">
		<div class="card-body">
			<div class="content">
				<table id="example" class="table table-striped nowrap" style="width:100%">
					<thead>
						<tr>
							<th>Nom</th>
							<th>Prenom</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
						{% for surveillant in surveillants %}
							{% if surveillant.isSurveillant == true %}

								<tr>
									<td>{{surveillant.nom}}</td>
									<td>
										{{surveillant.prenom}}</td>
									<td>
										<a href="{{ path("admin_surveillant_editer", {"id": surveillant.id}) }}" title="Cliquez pour modifiÃ© les informations de cet surveillant" class="btn btn-inverse btn-actions btn-outline-inverse">
											<i class="ti-marker-alt"></i>
										</a>

										<a href="{{ path("admin_surveillant_detail", {"id": surveillant.id}) }}" title="Cliquez pour consulter les details de cet surveillant" class="btn btn-info btn-outline-info">
											<i class="ti-receipt"></i>
										</a>
									</td>
								</tr>
							{% endif %}
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
{% endblock %}

{% block javascripts %}{% endblock %}
